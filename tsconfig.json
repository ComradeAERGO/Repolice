{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/fonts/*": ["./src/styles/fonts/*"],
      "@/fonts": ["./src/styles/fonts/fonts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "hardhat.config.js"],
  "files": ["./node_modules/redux-persist/types/storage/index.d.ts"],
  "exclude": ["node_modules"]
}
